---
const { img, alt } = Astro.props;
import { Image } from "astro:assets";
---

<div class="opacity-100 hover:opacity-90 transition-all">
  <a href={img} target="_blank" data-fancybox="gallery-a">
    <Image
      class="rounded border border-[var(--border-gray)] w-100"
      src={img}
      alt={alt}
      width={1200}
      height={1200}
      loading="lazy"
      decoding="async"
      format="avif"
    />
  </a>
</div>

<style>
  div {
    display: grid;
    grid-template-rows: 1fr auto;
    margin-bottom: 10px;
    break-inside: avoid;
  }
</style>

<script>
  // Include Lightbox
  import { Fancybox } from "@fancyapps/ui";
  import "@fancyapps/ui/dist/fancybox/fancybox.css";
  document.addEventListener("astro:page-load", () => {
    Fancybox.bind("[data-fancybox]", {
      contentClick: "toggleCover",
      Images: {
        Panzoom: {
          panMode: "mousemove",
          mouseMoveFactor: 1.1,
          mouseMoveFriction: 0.12,
        },
      },
    });
  });

  // document.addEventListener("astro:page-load", () => {

  //   });
</script>
